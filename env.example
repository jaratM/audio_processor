# ==============================================================================
# AWS CONFIGURATION (Required for Topic Analysis)
# ==============================================================================

# AWS Credentials - NEVER commit actual credentials to version control!
AWS_ACCESS_KEY_ID=AWS_ACCESS_KEY_ID
AWS_SECRET_ACCESS_KEY=AWS_SECRET_ACCESS_KEY
# AWS_SESSION_TOKEN=optional_session_token

# AWS Region (default: us-west-2)
AWS_DEFAULT_REGION=Region

#HuggingFace token
HF_TOKEN=your_HF_TOKEN

# MinIO Configuration Example
# Copy this file to minio.env and fill in your actual credentials
# Then source it: source minio.env

# MinIO Endpoint (without https://)
export MINIO_ENDPOINT="your_endpoint"

# MinIO Access Credentials
export MINIO_ACCESS_KEY="your_access_key_here"
export MINIO_SECRET_KEY="your_secret_key_here"

# Default Bucket Name
export MINIO_BUCKET="your_bucket_name"

# Optional: Set to false if using HTTP instead of HTTPS
# export MINIO_SECURE="true"
